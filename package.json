  "main": "lib/index.ts",
  "files": [
    "./lib/**/*"
  ],
  "scripts": {
    "test": "npm run build && intern",
    "lint": "eslint lib/**/*.ts tests/**/*.ts",
    "format": "eslint lib/**/*.ts tests/**/*.ts --fix",
